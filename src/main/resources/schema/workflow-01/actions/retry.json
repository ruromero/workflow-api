{
  "type": "object",
  "javaType": "org.serverless.workflow.api.actions.Retry",
  "description": "Retry Definition",
  "properties": {
    "match": {
      "type": "string",
      "description": "Specifies the matching value for the result"
    },
    "interval": {
      "type": "string",
      "description": "Specifies retry interval (ISO 8601 format)"
    },
    "maxRetries": {
      "type": "integer",
      "default": "0",
      "minimum": 0,
      "description": "Specifies the maximum number of retries"
    },
    "nextState": {
      "type": "string",
      "description": "Name of the next state to transition to when exceeding the maxRetries limit",
      "minLength": 1
    },
    "metadata": {
      "$ref": "../metadata/metadata.json"
    }
  },
  "required": [
    "match"
  ]
}